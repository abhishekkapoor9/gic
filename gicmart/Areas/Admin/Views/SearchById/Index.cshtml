@model gicmart.Areas.Admin.Models.profile
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_master.cshtml";
}

<!--page title end-->
@using (Html.BeginForm("index", "SearchById", FormMethod.Post))
{
    <div class="row">
        <div class="form-group">
            <div class="col-md-3"></div>
            <div class="col-md-4">
                <label>User ID</label>
                @Html.TextBoxFor(m => m.searchId, new { @class = "form-control", required = "required", @id = "txt_searchId" })
                </div>
            </div>
    </div>
    <div class="row" style="padding-top:3% !important">
        <div class="form-group">
            <button type="button" class="btn btn-primary" style="margin-left:400px" id="btn_submit">Submit</button>
            <button type="reset" class="btn btn-primary" style="">Reset</button>
        </div>
    </div>
    <section class="content" style="">
        <div class="row mar_gin" style="width:100% !important">
            <div class="col-md-8 col-md-offset-2" style="">
                <div id="basic-data" class="form-wizard active">
                    <br />
                    <h4 class="col-md-12"><b>User Information</b></h4><br /><br />
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Sponsor ID</label>
                            @Html.TextBoxFor(m => m.sponsorid, new { @class = "form-control", @id="txt_sponsorId", @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Pin</label>
                            @Html.TextBoxFor(m => m.pin, new { @class = "form-control",  @readonly = "readonly", @id = "txt_pin" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>User ID</label>
                            @Html.TextBoxFor(m => m.userid, new { @class = "form-control", @readonly = "readonly", @id = "txt_userId" })
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="col-md-12">
                            <h4>Basic Information</h4>
                        </div>

                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Name</label>
                            @Html.TextBoxFor(m => m.name, new { @class = "form-control", @readonly = "readonly" , @id = "txt_name" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Mobile Number</label>
                            @Html.TextBoxFor(m => m.mobileno, new { @class = "form-control", @id = "txt_mobile" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Password</label>
                            @Html.TextBoxFor(m => m.password, new { @class = "form-control", @readonly = "readonly", @id = "txt_Passord" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label " for="pancardno"> Pan Card Number </label>
                            @Html.TextBoxFor(m => m.pancardno, new { @class = "form-control", @readonly = "readonly", @id = "txt_pan" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label " for=""> Nominee Name </label>
                            @Html.TextBoxFor(m => m.nominee, new { @class = "form-control", @readonly = "readonly", @id = "txt_nomiee" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Address</label>
                            @Html.TextBoxFor(m => m.address, new { @class = "form-control", @id = "txt_sponsorId" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>City</label>
                            @Html.TextBoxFor(m => m.city, new { @class = "form-control", @id = "txt_city" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>State</label>
                            @Html.TextBoxFor(m => m.state, new { @class = "form-control", @id = "txt_state" })
                        </div>
                    </div>
                    <h4 class="col-md-12"> Update Bank Information </h4>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label " for=""> Holder Name </label>
                            @Html.TextBoxFor(m => m.holdername, new { @class = "form-control", @id = "txt_holdername" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label " for=""> Account Number </label>
                            @Html.TextBoxFor(m => m.accountno, new { @class = "form-control", @id = "txt_accountno" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label" for="">IFSC Code</label>
                            @Html.TextBoxFor(m => m.ifsccode, new { @class = "form-control", @id = "txt_ifsc" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label" for="">Bank Name</label>
                            @Html.TextBoxFor(m => m.bankname, new { @class = "form-control", @id = "txt_bankname" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label" for="">Profile Photo</label>
                            @Html.TextBoxFor(m => m.profilepic, new { @class = "form-control", @id = "txt_profil" })
                            <input type="file" name="pimage" id="pimage" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label" for="">KYC Photo</label>
                            @Html.TextBoxFor(m => m.kycpic, new { @class = "form-control", @id = "txt_kyvphoto" })
                            <input type="file" name="kyc" id="pimage" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary" style="margin-left:400px">Submit</button>
                            <button type="reset" class="btn btn-primary" style="">Reset</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script type="text/javascript">
        $("#btn_submit").click(function () {

            var searchId =$("#txt_searchId").val();
            $.ajax
            ({
                url: 'GetDetails',
                type: 'POST',
                datatype: 'application/json',
                rownumbers: true,
                contentType: 'application/json',
                data: JSON.stringify({
                    searchId: searchId
                }),
                success: function (result) {
                    $("#txt_sponsorId").val(result.sponsorid);
                    $("#txt_pin").val(result.pin);
                    $("#txt_userId").val(result.userid);
                    $("#txt_name").val(result.name);
                    $("#txt_mobile").val(result.mobileno);
                    $("#txt_Passord").val(result.password);
                    $("#txt_pan").val('null');
                    $("#txt_nomiee").val(result.nominee);
                    $("#txt_sponsorId").val(result.sponsorid);
                    $("#txt_city").val(result.city);
                    $("#txt_state").val(result.state);
                    $("#txt_holdername").val(result.holdername);
                    $("#txt_accountno").val(result.accountno);
                    $("#txt_ifsc").val(result.ifsccode);
                    $("#txt_bankname").val(result.bankname);
                },
                error: function (result) {
                    alert("Whooaaa! Something went wrong..")
                   
                },
            });

        });

    </script>
}
