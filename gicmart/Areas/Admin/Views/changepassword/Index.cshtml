@model gicmart.Areas.User.Models.changePassword
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_master.cshtml";
}

<!--page title start-->

<!--page title end-->
@using (Html.BeginForm("Index", "changepassword", FormMethod.Post))
{
    if (ViewBag.Message == "Success")
    {
        <div class="alert alert-success fade in">
            <a href="#" class="close" data-dismiss="alert">&times;</a>
            <strong>Success!</strong> Password Changed successfully.
        </div>
    }

    if (ViewBag.Message == "Fail")
    {
        <div class="alert alert-danger fade in">
            <a href="#" class="close" data-dismiss="alert">&times;</a>
            <strong>Error!</strong>  while Changing Password.
        </div>
    }
    if (ViewBag.Message == "Password")
    {
        <div class="alert alert-danger fade in">
            <a href="#" class="close" data-dismiss="alert">&times;</a>
            <strong>Error!</strong> Passwords not matches.
        </div>
    }
  <section class="content" style="margin-top:100px;height:269px">
           <div class="row mar_gin" style="width:1381px">         
                <div class="col-md-12" style="width:1381px">
                           <div class="form-group col-md-12" style="">
                             
                                <label class="control-label col-sm-3" for="email">Old Password:</label>
                                <div class="col-sm-6">
                                    @Html.TextBoxFor(m => m.oldPass, new { @class = "form-control", required = "required", @placeholder= "Enter OLD Passwoord", type = "password" })
                                </div>
                           </div>
                           <div class="form-group col-md-12">
                                <label class="control-label col-sm-3" for="pwd">New Password:</label>
                                <div class="col-sm-6">
                                    @Html.TextBoxFor(m => m.changePass, new { @class = "form-control", required = "required", @placeholder = "Enter New Passwoord", type = "password" })
                                </div>
                           </div>
                <div class="form-group col-md-12">
                     <label class="control-label col-sm-3" for="pwd">Conform Password:</label>
                     <div class="col-sm-6">
                         @Html.TextBoxFor(m => m.confirmPass, new { @class = "form-control", required = "required", @placeholder = "Confirm New Passwoord", type = "password" })
                     </div>
                </div>
                <div class="form-group col-md-12">
                     <div class="next-btn">
                          <input type="submit" name="submit" class="btn btn-primary col-md-offset-4" value="Update Now" >
                     </div>
                </div>
          </div>
        </div>

</section>
}

