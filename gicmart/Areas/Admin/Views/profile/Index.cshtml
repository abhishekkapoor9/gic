@model gicmart.Areas.Admin.Models.profile
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_master.cshtml";
}

<!--page title end-->
@using (Html.BeginForm("index", "profile", FormMethod.Post))
{
    if (ViewBag.Message == "Success")
    {
        <div class="alert alert-success fade in">
            <a href="#" class="close" data-dismiss="alert">&times;</a>
            <strong>Success!</strong> Data Saved successfully.
        </div>
    }

    if (ViewBag.Message == "Fail")
    {
        <div class="alert alert-danger fade in">
            <a href="#" class="close" data-dismiss="alert">&times;</a>
            <strong>Error!</strong>  while submitting your data.
        </div>
    }
    <section class="content" style="">
        <div class="row mar_gin" style="width:118% !important">
            <div class="col-md-8 col-md-offset-2" style="">
                <div id="basic-data" class="form-wizard active">
                    <br />
                    <h4 class="col-md-12"><b>Your Profile</b></h4><br /><br />
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Sponsor ID</label>
                            @Html.TextBoxFor(m => m.sponsorid, new { @class = "form-control", required = "required", value = Model.sponsorid, @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Pin</label>
                            @Html.TextBoxFor(m => m.pin, new { @class = "form-control", required = "required", value = Model.pin, @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>User ID</label>
                            @Html.TextBoxFor(m => m.userid, new { @class = "form-control", required = "required", value = Model.userid, @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="col-md-12">
                            <h4>Basic Information</h4>
                        </div>

                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Name</label>
                            @Html.TextBoxFor(m => m.name, new { @class = "form-control", required = "required", value = Model.name, @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Mobile Number</label>
                            @Html.TextBoxFor(m => m.mobileno, new { @class = "form-control", required = "required", value = Model.mobileno, @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Password</label>
                            @Html.TextBoxFor(m => m.password, new { @class = "form-control", required = "required", value = Model.password, @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label " for="pancardno"> Pan Card Number </label>
                            @Html.TextBoxFor(m => m.pancardno, new { @class = "form-control", required = "required", value = Model.pancardno, @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label " for=""> Nominee Name </label>
                            @Html.TextBoxFor(m => m.nominee, new { @class = "form-control", required = "required", value = Model.nominee, @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Address</label>
                            @Html.TextBoxFor(m => m.address, new { @class = "form-control", required = "required", value = Model.address })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>City</label>
                            @Html.TextBoxFor(m => m.city, new { @class = "form-control", required = "required", value = Model.city })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>State</label>
                            @Html.TextBoxFor(m => m.state, new { @class = "form-control", required = "required", value = Model.state })
                        </div>
                    </div>
                    <h4 class="col-md-12"> Update Bank Information </h4>
                    <div class="col-md-12">
                        Last Update Bank Detail:&nbsp;&nbsp;&nbsp; @Model.lastupdateon &nbsp;&nbsp;&nbsp;
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label " for=""> Holder Name </label>
                            @Html.TextBoxFor(m => m.holdername, new { @class = "form-control", required = "required", value = Model.holdername })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label " for=""> Account Number </label>
                            @Html.TextBoxFor(m => m.accountno, new { @class = "form-control", required = "required", value = Model.accountno })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label" for="">IFSC Code</label>
                            @Html.TextBoxFor(m => m.ifsccode, new { @class = "form-control", required = "required", value = Model.ifsccode })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label" for="">Bank Name</label>
                            @Html.TextBoxFor(m => m.bankname, new { @class = "form-control", required = "required", value = Model.bankname })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label" for="">Profile Photo</label>
                            @Html.TextBoxFor(m => m.profilepic, new { @class = "form-control", value = Model.profilepic })
                            <input type="file" name="pimage" id="pimage" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label" for="">KYC Photo</label>
                            @Html.TextBoxFor(m => m.kycpic, new { @class = "form-control", value = Model.kycpic })
                            <input type="file" name="kyc" id="pimage" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary" style="margin-left:400px">Submit</button>
                            <button type="reset" class="btn btn-primary" style="">Reset</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}


